<block wx:for="{{diyitem.data}}" wx:key="index" wx:for-item="items" wx:for-index="index" >
	<block wx:if="{{diyitem.status==''||diyitem.status==null}}" >
		<view>
			<block wx:if="{{index==0}}">
				<include src="/pages/diy/template/tpl_tabbarlist.wxml" />
			</block>
		</view>
	</block>
	<block wx:else>
		<view>
			<block wx:if="{{diyitem.status==index}}">
				<include src="/pages/diy/template/tpl_tabbarlist.wxml" />
			</block>
		</view>
	</block>
</block>
